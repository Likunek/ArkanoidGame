<Page x:Class="ArkanoidGame.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ArkanoidGame"
      mc:Ignorable="d" 
      d:Width="1920" d:Height="1000">

    <Grid>
        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Margin="0 50">
                <TextBlock Text="Добро пожаловать в " FontSize="30" TextAlignment="Center" Foreground="#FFA4A4A4"/>
                <TextBlock Text="ArkanoidGame!" FontSize="100"  TextAlignment="Center" Foreground="#FFF6F7F9"/>
            </StackPanel>
            <Button Content="Начало игры" Click="Game_Click" Style="{StaticResource btnStyle}"/>
            <Button Content="Как играть?" Click="Help_Click" Style="{StaticResource btnStyle}"/>
            <Button Content="Выход" Click="Exit_Click" Style="{StaticResource btnStyle}"/>
        </StackPanel>
    </Grid>
</Page>
